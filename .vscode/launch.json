{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "PROJECT_ROOT": "/home/hondat/work/mysite"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 3000,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}